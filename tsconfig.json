{
	"compilerOptions": {
		"lib": ["es2021"],
    		"module": "commonjs",
    		"target": "es2021",
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["./src/excludes/*.ts", "./build/**/*"]
}
